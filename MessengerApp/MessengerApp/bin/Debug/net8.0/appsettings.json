{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=MessengerDB;Trusted_Connection=True;MultipleActiveResultSets=true"
    },
    "JwtSettings": {
        "Secret": "your-super-secret-key-at-least-32-characters-long",
        "Issuer": "MessengerApp",
        "Audience": "MessengerAppUsers",
        "ExpiryMinutes": 60
    },
    "OAuth": {
        "Google": {
            "ClientId": "your-google-client-id",
            "ClientSecret": "your-google-client-secret"
        }
    },
    "AppSettings": {
        "LogDirectory": "Logs",
        "LogFileMask": "messenger-*.log",
        "MaxFileSizeMB": 10,
        "RetentionDays": 30,
        "AllowedFileTypes": [ ".txt", ".jpg", ".png", ".pdf" ],
        "MaxFileSizeBytes": 5242880
    }
}